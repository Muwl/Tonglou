<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:su="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_sel_bg"
    android:orientation="vertical"
    android:padding="0dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/report_suc_bg"/>

        <ImageView
            android:id="@+id/submit_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/location_addsuc"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/submit_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:layout_marginLeft="12dp"
        android:text="举报成功"
        android:textColor="#000"
        android:textSize="@dimen/first_font" />

    <TextView
        android:id="@+id/submit_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:layout_marginLeft="12dp"
        android:text="如果属实，我们将删除该群。\n感谢您的支持"
        android:textColor="#000"
        android:textSize="@dimen/second_font" />



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="20dp"
        android:background="@color/dicider_col" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/submit_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/first_font"
            android:paddingTop="12dp"
            android:background="@color/transparent"
            android:paddingBottom="12dp"
            android:layout_weight="1"
            android:text="返回"
            android:visibility="gone"
            android:clickable="true"
            android:textColor="#499eb8"/>
        <ImageView
            android:id="@+id/submit_div"
            android:layout_width="1px"
            android:visibility="gone"
            android:layout_height="match_parent"
            android:background="@color/dicider_col" />

        <TextView
            android:id="@+id/submit_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/first_font"
            android:paddingTop="12dp"
            android:background="@color/transparent"
            android:paddingBottom="12dp"
            android:text="关闭"
            android:clickable="true"
            android:textColor="#499eb8"/>
    </LinearLayout>



</LinearLayout>