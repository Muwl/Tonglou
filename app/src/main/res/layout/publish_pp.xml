<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/publish_pp_title"
        layout="@layout/title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:text="标题"
                    android:textColor="#000"
                    android:textSize="@dimen/second_font" />


                <EditText
                    android:id="@+id/publish_pp_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:maxLength="12"
                    android:background="@drawable/groupdetail_edit"
                    android:hint="12字以内"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textColorHint="#CCCCCC"
                    android:textSize="@dimen/second_font" />


                <TextView
                    android:id="@+id/publish_pp_delcontent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="15dp"
                    android:text="详情"
                    android:textColor="#000"
                    android:textSize="@dimen/second_font" />


                <EditText
                    android:id="@+id/publish_pp_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="@drawable/groupdetail_edit"
                    android:gravity="top"
                    android:hint="200字内"
                    android:maxLength="200"
                    android:lines="5"
                    android:padding="10dp"
                    android:textColor="#000"
                    android:textColorHint="#CCCCCC"
                    android:textSize="@dimen/second_font" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="5dp"
                        android:text="区间选择"
                        android:textColor="#000"
                        android:textSize="@dimen/second_font" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">
                    <EditText
                        android:id="@+id/publish_pp_start"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/groupdetail_edit"
                        android:hint="地点"
                        android:padding="12dp"
                        android:singleLine="true"
                        android:textColor="#000"
                        android:textColorHint="#CCCCCC"
                        android:textSize="@dimen/second_font" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="#CCCCCC"
                        android:textSize="@dimen/second_font"
                        android:text="至"/>

                    <EditText
                        android:id="@+id/publish_pp_stop"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/groupdetail_edit"
                        android:hint="地点"
                        android:padding="10dp"
                        android:maxLength="12"
                        android:singleLine="true"
                        android:textColor="#000"
                        android:textColorHint="#CCCCCC"
                        android:textSize="@dimen/second_font" />

                </LinearLayout>

                <TextView
                    android:id="@+id/publish_pp_ok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/login_btn"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:text="发布"
                    android:textColor="@color/white"
                    android:textSize="@dimen/first_font" />

            </LinearLayout>

        </ScrollView>

        <include
            android:id="@+id/publish_pp_pro"
            layout="@layout/pro"
            android:visibility="gone" />

    </RelativeLayout>


</LinearLayout>