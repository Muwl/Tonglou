<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/fwithfloor_title"
        layout="@layout/title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/fwithfloor_serch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/constancts_add_text"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/constacts_add_serch" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:background="@color/transparent"
                    android:hint="搜索"
                    android:textColor="#000"
                    android:textColorHint="#B3B3B3"
                    android:textSize="@dimen/second_font" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
                <TextView
                    android:id="@+id/fwithfloor_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="4dp"
                    android:drawableTop="@mipmap/fwithfloor_help"
                    android:gravity="center"
                    android:text="帮帮"
                    android:textColor="#666666"
                    android:textSize="@dimen/second_font" />



                <TextView
                    android:id="@+id/fwithfloor_used"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="4dp"
                    android:drawableTop="@mipmap/fwithfloor_used"
                    android:gravity="center"
                    android:text="二手"
                    android:textColor="#666666"
                    android:textSize="@dimen/second_font" />


                <TextView
                    android:id="@+id/fwithfloor_pp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="4dp"
                    android:drawableTop="@mipmap/fwithfloor_pp"
                    android:gravity="center"
                    android:text="拼拼"
                    android:textColor="#666666"
                    android:textSize="@dimen/second_font" />

                <TextView
                    android:id="@+id/fwithfloor_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawablePadding="4dp"
                    android:drawableTop="@mipmap/fwithfloor_group"
                    android:gravity="center"
                    android:text=" 活动"
                    android:textColor="#666666"
                    android:textSize="@dimen/second_font" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="15dp"
                android:background="@color/dicider_col" />

            <cn.yunluosoft.tonglou.view.CustomListView
                android:id="@+id/fwithfloor_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:scrollbars="none" />


        </LinearLayout>

        <include
            android:id="@+id/fwithfloor_pro"
            layout="@layout/pro"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>