<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_bg"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal">

        <cn.yunluosoft.tonglou.view.CircleImageView
            android:id="@+id/ffloorspeech_item_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="12dp"
            android:src="@mipmap/icon_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="12dp">

                <TextView
                    android:id="@+id/ffloorspeech_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="那么快了"
                    android:textColor="#000"
                    android:textSize="@dimen/second_font" />

                <TextView
                    android:id="@+id/ffloorspeech_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20:00"
                    android:textColor="#999999"
                    android:textSize="@dimen/thrid_font" />
            </LinearLayout>

            <TextView
                android:id="@+id/ffloorspeech_item_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="二手垃圾多啦"
                android:textColor="#666666"
                android:textSize="@dimen/thrid_font" />

        </LinearLayout>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/dicider_col"
        android:layout_marginLeft="90dp"/>

</LinearLayout>