<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/item_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <cn.yunluosoft.tonglou.view.CircleImageView
            android:id="@+id/used_item_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@mipmap/icon_default" />

        <TextView
            android:id="@+id/used_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/second_font"
            android:text="安安"
            android:layout_marginTop="10dp"
            android:textColor="#000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="12dp">

        <TextView
            android:id="@+id/used_item_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="@dimen/first_font"
            android:text="一起游玩"/>
        <TextView
            android:id="@+id/used_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:layout_marginTop= "7dp"
            android:textSize="@dimen/second_font"
            android:text="12月21日，香山夜爬，同去的速速加入我们的小团队。"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/used_item_bluebtn"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_chat"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/used_item_blueimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:src="@mipmap/myfloor_speak" />

                <TextView
                    android:id="@+id/used_item_bluetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:drawablePadding="4dp"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="聊聊"
                    android:textColor="@color/white"
                    android:textSize="@dimen/thrid_font" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/used_item_graybtn"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/gray_atten"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:src="@mipmap/atten" />

                <TextView
                    android:id="@+id/used_item_graytext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="关注"
                    android:textColor="@color/white"
                    android:textSize="@dimen/thrid_font" />

            </LinearLayout>

            <TextView
                android:id="@+id/used_item_atten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#B3B3B3"
                android:drawablePadding="5dp"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                android:drawableLeft="@mipmap/consult_atten"
                android:textSize="@dimen/second_font"
                android:text="343"/>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>