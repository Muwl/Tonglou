<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/constact_head_root1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp" >

        <cn.yunluosoft.tonglou.view.CircleImageView
            android:id="@+id/constact_head_icon"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:src="@mipmap/icon_default" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/constact_head_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="奔奥"
                android:textColor="@color/white"
                android:textSize="@dimen/first_font" />

            <ImageView
                android:id="@+id/constact_head_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="6dp"
                android:src="@mipmap/icon_sex_female"
                />


        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/fwithfloor_item_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/constacts_job_bg"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="4dp"
                android:text="IOS开发"
                android:textColor="@color/white"
                android:textSize="@dimen/thrid_font" />

            <TextView
                android:id="@+id/fwithfloor_item_career"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:background="@drawable/constacts_job_bg"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="4dp"
                android:text="金融行业"
                android:textColor="@color/white"
                android:textSize="@dimen/thrid_font" />
        </LinearLayout>

        <TextView
            android:id="@+id/fwithfloor_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="让整栋楼听到你的声音"
            android:textColor="@color/white"
            android:textSize="@dimen/second_font" />
    </LinearLayout>

</LinearLayout>