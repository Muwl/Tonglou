<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/item_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <cn.yunluosoft.tonglou.view.CircleImageView
            android:id="@+id/pp_item_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@mipmap/icon_default" />

        <TextView
            android:id="@+id/pp_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/second_font"
            android:text="安安"
            android:layout_marginTop="10dp"
            android:textColor="#000"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="12dp">

        <TextView
            android:id="@+id/pp_item_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="@dimen/first_font"
            android:text="一起游玩"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/pp_item_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/pp_start"
                android:textColor="#666666"
                android:drawablePadding="5dp"
                android:textSize="@dimen/thrid_font"
                android:text="玲珑大厦"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:layout_margin="5dp"
                android:textSize="@dimen/thrid_font"
                android:text="-"/>
            <TextView
                android:id="@+id/pp_item_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/pp_stop"
                android:textColor="#666666"
                android:drawablePadding="5dp"
                android:textSize="@dimen/thrid_font"
                android:text="宋家庄"/>


        </LinearLayout>
        <TextView
            android:id="@+id/pp_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:layout_marginTop= "4dp"
            android:textSize="@dimen/second_font"
            android:text="12月21日，香山夜爬，同去的速速加入我们的小团队。"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/pp_item_bluebtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/thrid_font"
                android:text="聊聊"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="12dp"
                android:clickable="true"
                android:paddingRight="12dp"
                android:drawablePadding="4dp"
                android:background="@drawable/login_btn"
                android:drawableLeft="@mipmap/myfloor_speak"
                />
            <TextView
                android:id="@+id/pp_item_graybtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/thrid_font"
                android:text="关注"
                android:layout_marginLeft="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:clickable="true"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:drawablePadding="4dp"
                android:background="@drawable/login_btn"
                android:drawableLeft="@mipmap/myfloor_speak"
                />


            <TextView
                android:id="@+id/pp_item_atten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#B3B3B3"
                android:drawablePadding="5dp"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                android:drawableLeft="@mipmap/consult_atten"
                android:textSize="@dimen/second_font"
                android:text="343"/>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>