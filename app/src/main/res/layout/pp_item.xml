<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <cn.yunluosoft.tonglou.view.CircleImageView
            android:id="@+id/pp_item_icon"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:src="@mipmap/icon_default" />

        <TextView
            android:id="@+id/pp_item_name"
            android:layout_width="58dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:maxEms="4"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="安安"
            android:textColor="#000"
            android:textSize="@dimen/thrid_font" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="bottom"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/pp_item_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一起游玩"
                android:textColor="#000"
                android:textSize="@dimen/second_font" />

            <ImageView
                android:id="@+id/pp_item_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:src="@mipmap/car_car"/>

            <TextView
                android:id="@+id/pp_item_time"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:gravity="right"
                android:text="3-10 15:20"
                android:textSize="@dimen/thrid_font"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pp_item_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/pp_start"
                android:drawablePadding="5dp"
                android:text="玲珑大厦"
                android:maxWidth="140dp"
                android:textColor="#666666"
                android:textSize="@dimen/thrid_font" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="-"
                android:textColor="#666666"
                android:textSize="@dimen/thrid_font" />

            <TextView
                android:id="@+id/pp_item_stop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/pp_stop"
                android:drawablePadding="5dp"
                android:maxWidth="140dp"
                android:text="宋家庄"
                android:textColor="#666666"
                android:textSize="@dimen/thrid_font" />


        </LinearLayout>

        <TextView
            android:id="@+id/pp_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="12月21日，香山夜爬，同去的速速加入我们的小团队。"
            android:textColor="#666666"
            android:textSize="@dimen/thrid_font" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/pp_item_bluebtn"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_chat"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pp_item_blueimage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:src="@mipmap/myfloor_speak" />

                <TextView
                    android:id="@+id/pp_item_bluetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:drawablePadding="4dp"
                    android:gravity="center"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:text="聊聊"
                    android:textColor="@color/white"
                    android:textSize="@dimen/thrid_font" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pp_item_graybtn"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/gray_atten"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:src="@mipmap/atten" />

                <TextView
                    android:id="@+id/pp_item_graytext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:gravity="center"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:text="关注"
                    android:textColor="@color/white"
                    android:textSize="@dimen/thrid_font" />

            </LinearLayout>


            <TextView
                android:id="@+id/pp_item_atten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:clickable="true"
                android:visibility="gone"
                android:drawableLeft="@mipmap/consult_atten"
                android:drawablePadding="5dp"
                android:text="343"
                android:textColor="#B3B3B3"
                android:textSize="@dimen/second_font" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>