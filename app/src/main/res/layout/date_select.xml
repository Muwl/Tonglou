<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="选择生日"
        android:textColor="@color/register_sex"
        android:textSize="@dimen/title_font" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/ptime_lin" />

    <DatePicker
        android:id="@+id/date_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:calendarViewShown="false"
        android:descendantFocusability="blocksDescendants"
        android:focusableInTouchMode="false" >
    </DatePicker>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/ptime_lin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/date_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="12dp"
            android:text="取消"
            android:textColor="@color/ptime_title"
            android:textSize="@dimen/second_font" />

        <ImageView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/ptime_lin" />

        <TextView
            android:id="@+id/date_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_btn"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="12dp"
            android:text="确定"
            android:textColor="@color/ptime_title"
            android:textSize="@dimen/second_font" />
    </LinearLayout>

</LinearLayout>