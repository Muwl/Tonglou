<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:padding="0dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/address_dialog_bg"
        android:orientation="vertical"
        android:padding="0dp" >

        <TextView
            android:id="@+id/photo_dialog_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="拍照"
            android:textColor="#0076FF"
            android:textSize="@dimen/second_font" />

        <ImageView
            android:id="@+id/photo_dialog_div"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#c7c7c7" />

        <TextView
            android:id="@+id/photo_dialog_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="从相册中选择"
            android:textColor="#0076FF"
            android:textSize="@dimen/second_font" />

        <ImageView
            android:id="@+id/photo_dialog_backdiv"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#c7c7c7"
            android:visibility="gone" />

        <TextView
            android:id="@+id/photo_dialog_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="加入黑名单"
            android:textColor="#0076FF"
            android:textSize="@dimen/second_font"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/photo_dialog_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/address_dialog_bg"
        android:clickable="true"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="15dp"
        android:text="取消"
        android:textColor="#000"
        android:textSize="@dimen/second_font" />

</LinearLayout>