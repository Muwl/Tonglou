<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:background="@drawable/consult_item_bg"
        android:padding="4dp"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/consult_item_view"
            android:layout_height="190dp">

            <ImageView
                android:id="@+id/consult_item_image"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:src="@color/white"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/consult_item_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@mipmap/info_title_black"
                android:paddingTop="5dp"
                android:paddingBottom="12dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="@dimen/first_font"
                android:textColor="@color/white"
                android:text="挖大家洼地挖矿啊我打牌凡客v配额我阿瓦达挖到了" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="6dp"
            android:background="@color/dicider_col" />


        <cn.yunluosoft.tonglou.view.MyListView
            android:id="@+id/consult_item_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            />

    </LinearLayout>
</LinearLayout>