<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/activity_bg"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:background="@drawable/consult_item_bg"
        android:padding="4dp"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <ImageView
                android:id="@+id/consult_item_image"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:src="@color/activity_bg"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/consult_item_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@mipmap/info_title_black"
                android:paddingTop="5dp"
                android:paddingBottom="12dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="@dimen/first_font"
                android:textColor="@color/white"
                android:text="挖大家洼地挖矿啊我打牌凡客v配额我阿瓦达挖到了" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="6dp"
            android:background="@color/dicider_col" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/consult_item_text1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:textSize="@dimen/second_font"
                android:textColor="#000000"
                android:maxLines="2"
                android:text="as大苏打撒打倒垃圾我拉阿瓦达瓦大到就阿瓦算打算" />

            <ImageView
                android:id="@+id/consult_item_image1"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="10dp"
                android:src="@color/activity_bg"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dicider_col" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/consult_item_text2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:textSize="@dimen/second_font"
                android:textColor="#000000"
                android:maxLines="2"
                android:text="as大苏打撒打倒垃圾我拉阿瓦达瓦大到就阿瓦算打算" />

            <ImageView
                android:id="@+id/consult_item_image2"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop"
                android:src="@color/activity_bg"/>
        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dicider_col" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/consult_item_text3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:textSize="@dimen/second_font"
                android:textColor="#000000"
                android:maxLines="2"
                android:text="as大苏打撒打倒垃圾我拉阿瓦达瓦大到就阿瓦算打算" />

            <ImageView
                android:id="@+id/consult_item_image3"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_marginLeft="10dp"
                android:scaleType="centerCrop"
                android:src="@color/activity_bg"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>