<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/main_fragment"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/main_bottom"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#f8f8f8"
        android:orientation="vertical"
        android:padding="0dp" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#edecef" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RadioGroup
                android:id="@+id/main_rg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:padding="0dp" >


                <RadioButton
                    android:id="@+id/main_bottom_withfloor"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:clickable="true"
                    android:drawableTop="@drawable/main_tab2_rb"
                    android:gravity="center"
                    android:paddingBottom="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="4dp"
                    android:text="同楼"
                    android:textColor="@color/bottom_text_bn"
                    android:textSize="@dimen/thrid_font" />

                <RadioButton
                    android:id="@+id/main_bottom_floorSpeech"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:clickable="true"
                    android:drawableTop="@drawable/main_tab1_rb"
                    android:gravity="center"
                    android:paddingBottom="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="4dp"
                    android:text="楼语"
                    android:textColor="@color/bottom_text_bn"
                    android:textSize="@dimen/thrid_font" />



                <RadioButton
                    android:id="@+id/main_bottom_contact"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:clickable="true"
                    android:drawableTop="@drawable/main_tab3_rb"
                    android:gravity="center"
                    android:paddingBottom="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="4dp"
                    android:text="人脉"
                    android:textColor="@color/bottom_text_bn"
                    android:textSize="@dimen/thrid_font" />

                <RadioButton
                    android:id="@+id/main_bottom_person"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@null"
                    android:clickable="true"
                    android:drawableTop="@drawable/main_tab4_rb"
                    android:gravity="center"
                    android:paddingBottom="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingTop="4dp"
                    android:text="我的"
                    android:textColor="@color/bottom_text_bn"
                    android:textSize="@dimen/thrid_font" />
            </RadioGroup>

            <!--<TextView-->
                <!--android:id="@+id/main_bottom_floornum"-->
                <!--android:layout_width="16dp"-->
                <!--android:layout_height="16dp"-->
                <!--android:background="@drawable/cricle_bg"-->
                <!--android:gravity="center"-->
                <!--android:padding="0dp"-->
                <!--android:text="7"-->
                <!--android:textColor="@android:color/white"-->
                <!--android:textSize="10sp"-->
                <!--android:visibility="invisible" />-->

            <TextView
                android:id="@+id/main_bottom_number"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/cricle_bg"
                android:gravity="center"
                android:padding="0dp"
                android:text="7"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>