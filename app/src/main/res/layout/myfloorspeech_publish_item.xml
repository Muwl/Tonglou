<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/activity_bg"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="10dp"
    android:orientation="horizontal">

    <cn.yunluosoft.tonglou.view.CircleImageView
        android:id="@+id/myfloorspeech_publish_item_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="12dp"
        android:src="@mipmap/icon_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/myfloorspeech_publish_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000"
                android:textSize="@dimen/second_font" />

            <TextView
                android:id="@+id/myfloorspeech_publish_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/second_font"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:visibility="gone"
                android:textColor="#B3B3B3"
                android:text="昨天"/>
        </LinearLayout>



        <TextView
            android:id="@+id/myfloorspeech_publish_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="12dp"
            android:text="二手垃圾多啦"
            android:lineSpacingMultiplier="1.2"
            android:textColor="#666666"
            android:textSize="@dimen/thrid_font" />

    </LinearLayout>

</LinearLayout>

    </LinearLayout>