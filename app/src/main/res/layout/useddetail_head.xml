<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <cn.yunluosoft.tonglou.view.CircleImageView
                    android:id="@+id/useddetail_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_default" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/useddetail_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="安吉拉"
                        android:textColor="#000"
                        android:textSize="@dimen/first_font" />

                    <TextView
                        android:id="@+id/useddetail_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:drawableLeft="@mipmap/pp_stop"
                        android:drawablePadding="4dp"
                        android:text="玲珑大厦"
                        android:textColor="#666666"
                        android:textSize="@dimen/second_font" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/useddetail_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/thrid_font"
                        android:text="聊聊"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="12dp"
                        android:clickable="true"
                        android:paddingRight="12dp"
                        android:drawablePadding="4dp"
                        android:background="@drawable/login_btn"
                        android:drawableLeft="@mipmap/myfloor_speak"
                        />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:background="@color/dicider_col" />

            <TextView
                android:id="@+id/useddetail_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textSize="@dimen/title_font"
                android:text="到宋家庄"/>

            <TextView
                android:id="@+id/useddetail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="12月12日，去香山，奋勇AA爱的伟大了空间的考拉的维拉建档立卡的"
                android:textColor="#000"
                android:textSize="@dimen/first_font" />

            <cn.yunluosoft.tonglou.view.MyListView
                android:id="@+id/useddetail_mylist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                />



            <LinearLayout
                android:id="@+id/useddetail_menu_lin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">



                <ImageView
                    android:id="@+id/useddetail_replay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="12dp"
                    android:clickable="true"
                    android:src="@mipmap/groupdetail_comment" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/consult_atten" />

                <cn.yunluosoft.tonglou.view.MyGridView
                    android:id="@+id/useddetail_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="8" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>