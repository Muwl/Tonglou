<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:padding="0dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/address_dialog_bg"
        android:orientation="vertical"
        android:padding="0dp" >

        <RelativeLayout
             android:id="@+id/emotion_dialog_secret"
             android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="保密"
                android:textColor="#2d2d2f"
                android:textSize="@dimen/second_font" />

            <ImageView
                android:id="@+id/emotion_dialog_secretok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:visibility="invisible"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:src="@drawable/emotion_ok" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#c7c7c7" />

        <RelativeLayout
              android:id="@+id/emotion_dialog_married"
            android:layout_width="match_parent"
             android:clickable="true"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="已婚"
                android:textColor="#2d2d2f"
                android:textSize="@dimen/second_font" />

            <ImageView
                android:id="@+id/emotion_dialog_marriedok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:visibility="invisible"
                android:src="@drawable/emotion_ok" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#c7c7c7" />

        <RelativeLayout
             android:id="@+id/emotion_dialog_nomarried"
            android:layout_width="match_parent"
             android:clickable="true"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="未婚"
                android:textColor="#2d2d2f"
                android:textSize="@dimen/second_font" />

            <ImageView
                android:id="@+id/emotion_dialog_nomarriedok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:visibility="invisible"
                android:src="@drawable/emotion_ok" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/emotion_dialog_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/address_dialog_bg"
        android:clickable="true"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="15dp"
        android:text="取消"
        android:textColor="#2d2d2f"
        android:textSize="@dimen/second_font" />

</LinearLayout>