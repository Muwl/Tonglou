<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/activity_bg"
    android:layout_height="match_parent">
    <include
        android:id="@+id/fconstacts_title"
        layout="@layout/title" />

    <LinearLayout
        android:id="@+id/fconstacts_constact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@drawable/item_bg"
        android:paddingTop="10dp"
        android:clickable="true"
        android:paddingBottom="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/constant_add"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#666666"
            android:textSize="@dimen/second_font"
            android:layout_marginLeft="15dp"
            android:text="同楼好友"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/go"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/dicider_col"/>

    <LinearLayout
        android:id="@+id/fconstacts_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:clickable="true"
        android:paddingRight="12dp"
        android:background="@drawable/item_bg"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/constant_add"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#666666"
            android:textSize="@dimen/second_font"
            android:layout_marginLeft="15dp"
            android:text="添加好友"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/go"/>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ListView
            android:id="@+id/fconstact_listview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:scrollbars="none" />


        <TextView
            android:id="@+id/fconstact_dialog"
            android:layout_width="49dip"
            android:layout_height="35dip"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@mipmap/constant_dia"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="30.0dip"
            android:visibility="invisible" />

        <cn.yunluosoft.tonglou.view.sortlistview.SideBar
            android:id="@+id/fconstact_sidrbar"
            android:layout_width="30.0dip"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right|center"
            android:background="@null" />
        <!-- </FrameLayout> -->

        <include
            android:id="@+id/fconstact_pro"
            layout="@layout/pro"
            android:visibility="gone" />
    </RelativeLayout>





</LinearLayout>